# TEXT (XeLaTeX)
font.size: 10
text.usetex: True
pgf.texsystem: xelatex
pgf.rcfonts: False
pgf.preamble: \usepackage{amsmath} \usepackage{xcolor} \usepackage{nicefrac} \usepackage{longtable} \usepackage{siunitx} \usepackage{fontspec} \definecolor{col1}{HTML}{E42A00} \definecolor{col2}{HTML}{0096FF} \definecolor{col3}{HTML}{E6AC00} \definecolor{col4}{HTML}{A01FDF} \definecolor{col5}{HTML}{28A428} \definecolor{col6}{HTML}{FF7B00} \usepackage{fontspec} \usepackage[math-style=ISO,bold-style=ISO,nabla=upright]{unicode-math} \setmainfont{EBGaramond}[Path=PWD/fonts/EBGaramond/,Extension=.otf,UprightFont=*-Regular,BoldFont=*-Bold,ItalicFont=*-Italic,BoldItalicFont=*-BoldItalic] \setsansfont{EBGaramond}[Path=PWD/fonts/EBGaramond/,Extension=.otf,UprightFont=*-Regular,BoldFont=*-Bold,ItalicFont=*-Italic,BoldItalicFont=*-BoldItalic] \setmathfont{Garamond-Math}[Path=PWD/fonts,Extension=.otf,Path=PWD/fonts/,StylisticSet={3,5,8}] \setmonofont{FiraMono}[Scale=MatchLowercase,Path=PWD/fonts/FiraMono/,Extension=.ttf,UprightFont=*-Regular,BoldFont=*-Bold] \usepackage{upgreek}
